{{#each countries}}
  <div class="box box-link-hover-shadow">
    <h2 class="title">
      {{name}}
    </h2>
    <a href="/country/{{_id}}" class="button">
      <span class="icon is-small">
        <i class="fas fa-folder-open" style="color:rgb(36, 213, 253)"></i></i>
      </span>
    </a>
    <a href="/dashboard/deletecountry/{{_id}}" class="button">
      <i class="fas fa-trash" style="color:rgba(228, 37, 37, 0.843)"></i></i>
    </a>
  </div>
{{/each}}
